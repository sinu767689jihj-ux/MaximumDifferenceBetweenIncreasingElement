public class MaximumDifferenceBetweenIncreasingElementUsingOptimalSolution {

    public int maximum(int[] arr) {
        int min = arr[0];
        int maxDiff = 0;

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] > min) {
                maxDiff = Math.max(maxDiff, arr[i] - min);
            } else {
                min = arr[i];
            }
        }
        return maxDiff;
    }

    public static void main(String[] args) {
        int[] arr = {9, 2, 3, 4, 10};
        MaximumDifferenceBetweenIncreasingElementUsingOptimalSolution obj =
                new MaximumDifferenceBetweenIncreasingElementUsingOptimalSolution();
        System.out.println(obj.maximum(arr));
    }
}
